<p id="notice"><%= notice %></p>

<div class="panel panel-default">
<div class="panel-heading"><h2>Lista Pinów</h2></div>
<div class="panel-body">

<table>
  <thead>
    <tr>
      <th>description:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to ' Pokaż ', pin %></td>
        <% if pin.user == current_user %>
        <td><%= link_to '  Edytuj  ', edit_pin_path(pin) %></td>
        <td><%= link_to '  Usuń ', pin, method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
     <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
<div class="panel-footer"><%= link_to 'Nowy Pin', new_pin_path %></div>
</div>